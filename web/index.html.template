<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Strava → Calendar</title>
    <style>
        h1 {
            text-align: center;
        }

        body {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            max-width: 600px;
            margin: 40px auto;
        }

        .card {
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 16px;
            margin-bottom: 24px;
        }

        button {
            padding: 8px 14px;
            border-radius: 4px;
            border: 1px solid #ccc;
            cursor: pointer;
            font-size: 0.95rem;
            margin-right: 8px;
        }

        button:hover {
            background: #e7e7e7;
        }

        #status {
            margin-top: 12px;
            font-size: 0.9rem;
            white-space: pre-line;
        }
    </style>
</head>

<body>
    <h1>Strava → Calendar</h1>

    <div class="card">
        <h2>Strava auth</h2>
        <p>
            Click here to link your Strava account to the application.
        </p>
        <button id="auth-btn">Open Strava authorization page</button>
    </div>

    <div class="card">
        <h2>Strava webhook</h2>
        <p>
            Subscribe or unsubscribe from the Strava webhook
        </p>
        <button id="subscribe-btn">Subscribe to webhook</button>
        <button id="unsubscribe-btn">Unsubscribe from webhook</button>
        <div id="status"></div>
    </div>

    <div class="card">
        <h2>Calendar</h2>
        <p>
            Copy the link below to add the calendar to your calendar application.
        </p>
        <pre><code id="calendar-link"></code></pre>
    </div>

    <script>
        const API_URL = "${API_URL}";

        const authBtn = document.getElementById('auth-btn');
        const subscribeBtn = document.getElementById('subscribe-btn');
        const unsubscribeBtn = document.getElementById('unsubscribe-btn');
        const calendarBtn = document.getElementById('calendar-btn');
        const statusDiv = document.getElementById('status');
        const calendarLinkCode = document.getElementById('calendar-link');

        function setStatus(message) {
            const now = new Date().toLocaleTimeString();
            statusDiv.textContent = `[${now}] ${message}`;
        }

        authBtn.addEventListener('click', () => {
            window.location.href = `${API_URL}/auth/start`;
        });

        subscribeBtn.addEventListener('click', async () => {
            try {
                const res = await fetch(`${API_URL}/subscriptions`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });

                if (!res.ok) {
                    setStatus(`Error subscribing to webhook`);
                } else {
                    setStatus(`Successfully subscribed to webhook`);
                }
            } catch (err) {
                console.error(err);
                setStatus(`Network error subscribing to webhook`);
            }
        });

        unsubscribeBtn.addEventListener('click', async () => {
            try {
                const res = await fetch(`${API_URL}/subscriptions`, {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' }
                });

                if (!res.ok) {
                    setStatus(`Error unsubscribing from webhook`);
                } else {
                    setStatus(`Successfully unsubscribed from webhook`);
                }
            } catch (err) {
                console.error(err);
                setStatus(`Network error unsubscribing from webhook`);
            }
        });

        calendarLinkCode.textContent = `${API_URL}/calendar`;
    </script>
</body>

</html>